{
    "name": "kbondurant/self-provider-container",
    "description": "Declare your definitions from within your service itself",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kbondurant\\SelfProviderContainer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Karim Bouheraoua",
            "email": "karim.bouheraoua@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0 || ^8.1",
        "league/container": "^4.0",
        "psr/container": "^1.1 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "symplify/easy-coding-standard": "^10.1"
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpstan"
        ],
        "test.unit": "phpunit",
        "test.static": "phpstan",
        "check.style": "ecs"
    }
}
